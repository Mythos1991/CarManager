<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.dc.carmanager.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="From: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fromTextView"
                android:paddingBottom="5dp"
                android:textSize="18sp"/>

            <TextView
                android:text="To: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toTextView"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:layout_below="@+id/fromTextView"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/progressSeekBar"
                android:rotation="270"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="351dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="233dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="42dp"
                    app:srcCompat="@drawable/lock_closed"
                    android:id="@+id/doorRight"
                    android:layout_alignTop="@+id/doorLeft"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="42dp"
                    app:srcCompat="@drawable/lock_closed"
                    android:id="@+id/doorBottom"
                    android:layout_marginBottom="26dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="42dp"
                    app:srcCompat="@drawable/lock_closed"
                    android:id="@+id/doorLeft"
                    android:layout_alignBottom="@+id/car"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="84dp" />

                <ImageView
                    android:layout_width="173dp"
                    android:layout_height="249dp"
                    app:srcCompat="@drawable/car2"
                    android:id="@+id/car"
                    android:layout_marginBottom="14dp"
                    android:layout_above="@+id/doorBottom"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/startImageButton"
                    app:srcCompat="@drawable/startbutton"
                    android:layout_alignTop="@+id/doorLeft"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1">

                <TextView
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="100%"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fuelTextView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fuelSeekBar"
                    android:layout_below="@+id/fuelTextView"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="19dp" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="42dp"
                    app:srcCompat="@drawable/fuel"
                    android:id="@+id/fuelImageView"
                    android:elevation="1dp"
                    android:layout_weight="0.11"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tempSeekBar"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="38dp" />

                <TextView
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="18Â° C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tempTextView"
                    android:layout_below="@+id/tempImageView"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="18dp" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="42dp"
                    app:srcCompat="@drawable/temperature"
                    android:id="@+id/tempImageView"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/route_button"
            android:id="@+id/routeImageButton"
            android:layout_weight="0.25" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/panic"
            android:id="@+id/panicImageButton"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/dots"
            android:id="@+id/languageImageButton"
            android:layout_weight="0.20" />
    </LinearLayout>
</LinearLayout>
