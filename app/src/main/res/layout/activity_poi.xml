<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_poi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dc.carmanager.POI"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <RadioButton
            android:text="ALL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/allRadioButton"
            android:layout_weight="1"
            android:onClick="onAllClick"/>

        <RadioButton
            android:text="PUB ONLY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/pubRadioButton"
            android:layout_weight="1"
            android:onClick="onPubOnlyClick"/>

        <RadioButton
            android:text="FUEL ONLY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fuelRadioButton"
            android:layout_weight="1"
            android:onClick="onFuelOnlyClick"/>

        <RadioButton
            android:text="AMENITY ONLY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/amenityRadioButton"
            android:layout_weight="1"
            android:onClick="onAmenityOnlyClick"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myListView"
            android:layout_gravity="bottom" />
    </LinearLayout>

</LinearLayout>
